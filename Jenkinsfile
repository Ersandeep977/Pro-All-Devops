/* This Pipeline code are Using to start the EC2 in running  */

pipeline
{
    agent any
    stages
    {
        stage('Ansible-M-Server')
        {
            steps
            {
             echo "hello Job-1"    
            }
        }
        stage('Ansible-Node-A')
        {
            steps
            {
             echo "hello Job-2"    
            }
        }
     stage('Ansible-Node-B')
        {
            steps
            {
             echo "hello Job-3"    
            }
        } 
    }
}